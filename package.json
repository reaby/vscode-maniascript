{
    "name": "vscode-maniascript",
    "displayName": "ManiaScript",
    "icon": "images/ms.png",
    "description": "ManiaScript Language Support for vs code",
    "version": "1.3.1",
    "publisher": "mmcfarland",
    "repository": {
        "type": "git",
        "url": "https://github.com/MattMcFarland/vscode-maniascript"
    },
    "engines": {
        "vscode": "^1.47.0"
    },
    "scripts": {
        "vscode:prepublish": "npm run build",
        "build": "scripts/build.js"
    },
    "license": "MIT",
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:maniascript",
        "onLanguage:xml",
        "onLanguage:jinja-xml"
    ],
    "main": "./lib/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "maniascript",
                "aliases": [
                    "ManiaScript",
                    "Maniascript"
                ],
                "extensions": [
                    ".Script.txt",
                    ".script.txt"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "snippets": [
            {
                "language": "maniascript",
                "path": "./snippets/maniascript.json"
            }
        ],
        "colors": [
            {
                "id": "maniascript.structColor",
                "description": "Struct color",
                "defaults": {
                    "dark": "#4ec9b0ff",
                    "light": "#4ec9b0ff",
                    "highContrast": "#000"
                }
            }
        ],
        "grammars": [
            {
                "scopeName": "jinja2.maniascript",
                "path": "./syntaxes/jinja2-ManiaScript.json",
                "injectTo": [
                    "text.xml.jinja"
                ],
                "embeddedLanguages": {
                    "meta.embedded.script.block.ms": "maniascript"
                }
            },
            {
                "scopeName": "xml.maniascript",
                "path": "./syntaxes/xml-ManiaScript.json",
                "injectTo": [
                    "text.xml"
                ],
                "embeddedLanguages": {
                    "meta.embedded.script.block.ms": "maniascript"
                },
                "tokenTypes": {
                    "meta.embedded.script.block.ms": "other"
                }
            },
            {
                "scopeName": "templateString.injection",
                "path": "./syntaxes/ManiaScript-xml.json",
                "injectTo": [
                    "source.ms"
                ]
            },
            {
                "language": "maniascript",
                "scopeName": "source.ms",
                "path": "./syntaxes/ManiaScript.json"
            }
        ],
        "configuration": {
            "title": "ManiaScript",
            "properties": {
                "conf.maniascript.apiDocPath": {
                    "type": [
                        "null",
                        "string"
                    ],
                    "default": null,
                    "description": "You can set custom path to doc.h to parse completions for ManiaScript API"
                }
            }
        }
    },
    "devDependencies": {
        "@types/node": "^14.0.22",
        "maniascript-tmlanguage": "^2.0.1",
        "mkdirp": "1.0.4",
        "rimraf": "^3.0.2",
        "vscode": "^1.1.37"
    },
    "dependencies": {
        "fuzzaldrin": "^2.1.0"
    }
}
